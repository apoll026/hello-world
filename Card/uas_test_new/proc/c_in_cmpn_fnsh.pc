int main( int argc, char **argv )
{
   if ( argc != 3 || strcmp( argv[2], "102701" ) != 0 && strcmp( argv[2], "200601" ) != 0 )
   {
       printf( "ERROR: Invalid Parameter\n ( => Usage : pc_ins_z700 [SLIP_DATE(YYYYMM)] [ACCT_CODE(102701 or 200601)] )\n");
       exit( EXIT_FAILURE );
   }

   VCHINIT(hv_date);
   VCHINIT(hv_param_acct_code );
   VCHINIT(hv_param_acct_code2 );
   cnt = 0;
   strcpy( hv_date.arr, argv[1] );
   strcpy( hv_param_acct_code.arr, argv[2] );
   hv_date.len = strlen( hv_date.arr );
   hv_param_acct_code.len = strlen( hv_param_acct_code.arr );


   if ( strncmp("102701", hv_param_acct_code.arr,6) == 0 )  /** 받을어음 **/
   {
       strcpy(hv_param_acct_code2.arr, "102702");  /** 공사미수금(전자) **/
       hv_param_acct_code2.len = strlen(hv_param_acct_code2.arr);
   }
   else
   {
       strcpy(hv_param_acct_code2.arr, "noacnt");
       hv_param_acct_code2.len = strlen(hv_param_acct_code2.arr);
   }

   EXEC SQL CONNECT :uid;
  
   EXEC SQL
       DELETE 
       FROM   JATZ700
       WHERE  SLIP_DATE LIKE :hv_date || '%'
       AND    DBIT_CRED_DIVS = DECODE( :hv_param_acct_code, '102701', '2',  /** 받을어음 **/
                                                            '200601', '1' ) /** 지급어음 **/
       AND ACCT_CODE in ( :hv_param_acct_code, :hv_param_acct_code2);

   EXEC SQL DECLARE CURS1 CURSOR FOR
       
       SELECT MIN(FK_SLIP_DATE),               MIN(FK_SLIP_DEPT),
              MIN(FK_SLIP_CLSS),          MIN(FK_SLIP_MAIN),
              MIN(SLIP_SUB),              ACCT_CODE,
              MIN(FK_SLIP_DATE),  
              FNSH_DATE,
              CMPN_NUM,                   MIN(COST_DEPT),
              MANG_NUM,                   DBCR_DIVS,
              SUM(AMT) 
       FROM   FATA210
       WHERE  FK_SLIP_DATE LIKE :hv_date || '%'
       AND    ACCT_CODE in ( :hv_param_acct_code, :hv_param_acct_code2 )
       AND    DBCR_DIVS = DECODE( :hv_param_acct_code, '102701', '2',
                                                       '200601', '1')
      GROUP BY CMPN_NUM, MANG_NUM, ACCT_CODE, FNSH_DATE, DBCR_DIVS
/****
       AND    FK_SLIP_DATE||FK_SLIP_DEPT||FK_SLIP_CLSS||FK_SLIP_MAIN != '20020927H0000070001'
       AND    FK_SLIP_DATE||FK_SLIP_DEPT||FK_SLIP_CLSS||FK_SLIP_MAIN != '20020927H0000070002'
       AND    FK_SLIP_DATE||FK_SLIP_DEPT||FK_SLIP_CLSS||FK_SLIP_MAIN != '20020927H0000070003'
****/
       ;

   EXEC SQL OPEN CURS1;

   for ( inx=0;;inx++ )
   {
       VCHINIT(hv_slip_date);         VCHINIT(hv_slip_dept);
       VCHINIT(hv_slip_clss);         VCHINIT(hv_slip_main);
       hv_slip_sub = 0;               VCHINIT(hv_acct_code);
       VCHINIT(hv_issu_date);         VCHINIT(hv_fnsh_date);
       VCHINIT(hv_cmpn_num);          VCHINIT(hv_cost_dept);
       VCHINIT(hv_mang_num);          VCHINIT(hv_dbcr_divs);
       hv_amt = 0;

       EXEC SQL FETCH CURS1 INTO
               :hv_slip_date,               :hv_slip_dept,
               :hv_slip_clss,               :hv_slip_main,
               :hv_slip_sub,                :hv_acct_code,
               :hv_issu_date,               :hv_fnsh_date,
               :hv_cmpn_num,                :hv_cost_dept,
               :hv_mang_num,                :hv_dbcr_divs,
               :hv_amt;

       if ( SQLCODE == SQL_NO_DATA )
       {
           if ( inx == 0 )
           {
               printf("생성할 자료가 없음 :%d\n",sqlca.sqlcode);
               EXEC SQL CLOSE CURS1;
               return FAILURE;
           }
           else
               break;
       }

       else if ( SQLCODE != SQL_OK )
       {
           printf("NOT OK ERROR : %d\n",sqlca.sqlcode);
           EXEC SQL CLOSE CURS1;
           EXEC SQL ROLLBACK WORK;
           return FAILURE;
       }

       EXEC SQL
           INSERT
           INTO   JATZ700
                ( SLIP_DIVS,                 SLIP_DATE,
                  SLIP_UNIT,                 SLIP_CLSS,
                  SLIP_MAIN_NUM,             SLIP_SUB_NUM,
                  ACCT_CODE,                 ISSU_DATE,
                  FNSH_DATE,                 CMPN_NUM,
                  COST_DEPT_CODE,            MANG_NUM,
                  DBIT_CRED_DIVS,            AMT,
                  UPD_DATE
                )
           VALUES ('A',                     :hv_slip_date,
                   :hv_slip_dept,           :hv_slip_clss,
                   :hv_slip_main,           :hv_slip_sub,
                   :hv_param_acct_code,     :hv_issu_date,
                   :hv_fnsh_date,           :hv_cmpn_num,
                   :hv_cost_dept,           :hv_mang_num, 
                   :hv_dbcr_divs,           :hv_amt,
                   SYSDATE
                  );
       if ( SQLCODE != SQL_OK )
       {
           printf("Z700 INSERT ERROR : %d, %s\n",sqlca.sqlcode,hv_mang_num.arr);
           EXEC SQL CLOSE CURS1;
           EXEC SQL ROLLBACK WORK;
           return FAILURE;
       }
       printf( "%5d => 어음번호:%s\n", ++cnt, hv_mang_num.arr );
    }  /** END FOR **/

    EXEC SQL CLOSE CURS1;
    EXEC SQL COMMIT WORK;

    printf( "%d 건 insert.\n", cnt );

    if ( strcmp( hv_param_acct_code.arr, "102701" ) == 0 )
    {
        ins_z702_main();
        if ( not_found_cost_dept() == TRUE )
            printf( "not_found_dept: 사내받을어음만기 증빙발생 skiped.\n" );
        else
        {
            printf( "사내받을어음만기 증빙 생성중...\n" );
            iche_drft_fnsh();
        }
    }
    else if ( strcmp( hv_param_acct_code.arr, "200601" ) == 0 )
    {
        ins_z702_main();
        if ( not_found_cost_dept() == TRUE )
            printf( "not_found_dept: 사내지급어음만기 증빙발생 skiped.\n" );
        else
        {
            printf( "사내지급어음만기 증빙 생성중...\n" );
            iche_drft_fnsh();
        }
    }
    return SUCCESS;
}
/***************************************************************/
/* ins_z702_main()                                             */
/* z700에서 만기 데이타를 읽어 H0000으로 Z702에 INSERT하고     */
/* 귀속부서별로 찾는 sub function을 호출한다.                  */
/***************************************************************/
ins_z702_main()
{
   EXEC SQL
       DELETE 
       FROM  JATZ702 
       WHERE WORK_DATE = :hv_date
       AND   IN_OUT_DIVS = '2'
       AND   ACCT_CODE = :hv_param_acct_code;
     /***  AND   DRFT_NUM NOT IN ('0T8-800247');  ***/

   EXEC SQL DECLARE z700_cur CURSOR FOR
            SELECT NVL( MANG_NUM, ' ' ),        NVL( slip_date,' '),
                   NVL( issu_date,' '),         NVL( CMPN_NUM,' '),
                   NVL( AMT,0),                 NVL( SLIP_DIVS,' '),
                   NVL( SLIP_DATE, ' ' ),       NVL( SLIP_UNIT,' '),
                   NVL( SLIP_CLSS,' '),         NVL( SLIP_MAIN_NUM,0),
                   NVL( SLIP_SUB_NUM,0)
             FROM  JATZ700
            WHERE  SLIP_DATE LIKE :hv_date || '%'
            AND    DBIT_CRED_DIVS = DECODE( :hv_param_acct_code, '102701', '2',
                                                                 '200601', '1')
            AND    ACCT_CODE = :hv_param_acct_code
          /**  AND   MANG_NUM NOT IN ('0T8-800247')  **/
           ORDER BY SLIP_DATE; 

       EXEC SQL OPEN z700_cur;

       for ( inx = 0; ; inx++ )
       { 
           VCHINIT(hv_drft_num);
           VCHINIT(hv_fnsh_date);
           VCHINIT(hv_issu_date);
           VCHINIT(hv_cmpn_num);
           hv_amt = 0;
  
           EXEC SQL FETCH z700_cur INTO
                   :hv_drft_num,           :hv_fnsh_date,
                   :hv_issu_date,          :hv_cmpn_num,
                   :hv_amt,                :slip_divs,
                   :slip_date,             :slip_unit,
                   :slip_clss,             :slip_main_num,
                   :slip_sub_num;
 
           if ( SQLCODE == SQL_NO_DATA )
           {
               if ( inx == 0 )
               {
                   printf("생성할 자료가 없음 :%d\n",sqlca.sqlcode);
                   EXEC SQL CLOSE z700_cur;
                   return FAILURE;
               }
               else
	       {
                   puts("step1");
                   break;
               }
           }
           else if ( SQLCODE != SQL_OK )
           {
               printf("NOT OK ERROR : %d\n",sqlca.sqlcode);
               EXEC SQL CLOSE z700_cur;
               return FAILURE;
           }

           hv_drft_num.len        = strlen(hv_drft_num.arr);
           hv_fnsh_date.len       = strlen(hv_fnsh_date.arr);
           hv_issu_date.len       = strlen(hv_issu_date.arr);
           hv_cmpn_num.len        = strlen(hv_cmpn_num.arr);

           Insert_Jatz702(1, "Main      "); 
          
           if ( strcmp( hv_param_acct_code.arr, "102701" ) == 0 )
               make_detail_receivable_drft();

           else if ( strcmp( hv_param_acct_code.arr, "200601" ) == 0 )
               make_detail_payable_drft();
        }

    EXEC SQL CLOSE z700_cur;
    EXEC SQL COMMIT WORK;
  
    return SUCCESS;
}

/***************************************************************/
/* make_detail_payable_drft()                                  */
/* z702에서 지금어음만기 데이타의 원천 발생 데이타를 다시읽어  */
/* 귀속부서별로 찾는 z702에 insert한다.                        */
/***************************************************************/
make_detail_payable_drft()
{
    jnx = 1;

    EXEC SQL 
    SELECT NVL( SUM( AMT ), 0 ),
           COUNT( AMT )
    INTO  :t_amt,
          :cnt_1
    FROM JATZ702
    WHERE DRFT_NUM = RTRIM( :hv_drft_num, ' ' )
    AND GUBUN = '2'
    AND WORK_DATE <= :hv_date
    AND ACCT_CODE = '200601'
    AND IN_OUT_DIVS = '1';

    if ( sqlca.sqlcode != 0 ) 
        t_amt = 0;
    
    if ( t_amt != hv_amt && cnt_1 !=  0 ) 
    {
         printf("hv_amt : %15.f, dmnd : %15.f \n", hv_amt, t_amt );
         Insert_Jatz702( 2, "Detail 1 not match " );
         return;
    }
              
    EXEC SQL DECLARE c2 CURSOR FOR
    SELECT DEPT_CODE,
           AMT
    FROM   JATZ702
    WHERE  DRFT_NUM = RTRIM( :hv_drft_num, ' ' )
    AND    GUBUN = '2'
    AND    WORK_DATE <= :hv_date
    AND    ACCT_CODE = '200601'
    AND    IN_OUT_DIVS = '1';

    EXEC SQL OPEN c2;

    while ( 1 )
    {
        EXEC SQL FETCH c2 INTO :hv_c2_dept_code,
                               :hv_c2_amt ;

        if ( sqlca.sqlcode != 0 )
            break;
        
        EXEC SQL
            INSERT 
            INTO   JATZ702
                 ( WORK_DATE      ,            ACCT_CODE      ,
                   DRFT_NUM       ,            GUBUN          ,
                   DEPT_CODE      ,            SEQ            ,
                   ISSU_DATE      ,            FNSH_DATE      , 
                   CMPN_NUM       ,            AMT            ,
                   UPD_EMPNO      ,            UPD_DATE       ,
                   in_out_divs    ,            slip_divs      ,
                   slip_date      ,            slip_unit      ,
                   slip_clss      ,            slip_main_num  ,  
                   slip_sub_num   ) 
           VALUES (:hv_date,                   '200601',
                   RTRIM( :hv_drft_num, ' ' ) ,     '2',
                   :hv_c2_dept_code,           :jnx,
                   RTRIM( :hv_issu_date ),     RTRIM( :hv_fnsh_date ),
                   RTRIM( :hv_cmpn_num ) ,     :hv_c2_amt,
                   NULL         ,              NULL,
                   '2'          ,              :slip_divs      ,
                   :slip_date      ,           :slip_unit      ,
                   :slip_clss      ,           :slip_main_num  ,
                   :slip_sub_num   ); 
        jnx++; 
    }
   
    EXEC SQL CLOSE c2;
    if ( jnx == 1 )
        Insert_Jatz702( 2, "Detail 1 not match ");
}

make_detail_receivable_drft()
{
    jnx = 1;

    EXEC SQL
        SELECT NVL( SUM( AMT ), 0 ) 
        INTO   :t_amt
        FROM   JATZ702
        WHERE  DRFT_NUM = RTRIM( :hv_drft_num,' ')
        AND WORK_DATE <= :hv_date
        AND ACCT_CODE = '102701'
        AND IN_OUT_DIVS = '1'
        AND GUBUN = '2';

    if ( sqlca.sqlcode != 0 ) 
        t_amt = 0;

    if ( hv_amt < 0)
        t_amt = -1*t_amt;
    
    if ( t_amt != hv_amt ) 
    {
         printf("hv_amt : %15.f, dmnd : %15.f \n", hv_amt, t_amt );
         Insert_Jatz702( 2, "102701 : Detail 1 not match " );
         return;
    }
              
    EXEC SQL DECLARE z702_cur CURSOR FOR
    SELECT DEPT_CODE,
           CMPN_NUM,
           AMT
    FROM   JATZ702
    WHERE  DRFT_NUM = RTRIM( :hv_drft_num, ' ' )
    AND    WORK_DATE <= :hv_date
    AND    ACCT_CODE = '102701'
    AND    IN_OUT_DIVS = '1'
    AND    GUBUN = '2' ;

    EXEC SQL OPEN z702_cur;

    while ( 1 )
    {
        EXEC SQL FETCH z702_cur INTO :hv_c2_dept_code,
                                     :hv_c2_cmpn_num,
                                     :hv_c2_amt ;

        if ( sqlca.sqlcode != 0 )
            break;

        if ( hv_amt < 0)
            hv_c2_amt = -1*hv_c2_amt;

        EXEC SQL
            INSERT 
            INTO   JATZ702
                 ( WORK_DATE      ,            ACCT_CODE      ,
                   DRFT_NUM       ,            GUBUN          ,
                   DEPT_CODE      ,            SEQ            ,
                   ISSU_DATE      ,            FNSH_DATE      , 
                   CMPN_NUM       ,            AMT            ,
                   UPD_EMPNO      ,            UPD_DATE       ,
                   in_out_divs    ,            slip_divs      ,
                   slip_date      ,            slip_unit      ,
                   slip_clss      ,            slip_main_num  ,  
                   slip_sub_num   ) 
           VALUES (:hv_date,                   '102701',
                   RTRIM( :hv_drft_num, ' ' ) ,     '2',
                   :hv_c2_dept_code,           :jnx,
                   RTRIM( :hv_issu_date ),     RTRIM( :hv_fnsh_date ),
                   RTRIM( :hv_c2_cmpn_num ) ,     :hv_c2_amt,
                   NULL         ,              NULL,
                   '2'          ,              :slip_divs      ,
                   :slip_date      ,           :slip_unit      ,
                   :slip_clss      ,           :slip_main_num  ,
                   :slip_sub_num   ); 
        jnx++;
    }
   
    EXEC SQL CLOSE z702_cur;
    if ( jnx == 1 )
        Insert_Jatz702( 2, "Detail 1 not match ");
}



void Insert_Jatz702( int p, char *str )
{
    if ( p == 1 ) 
        strcpy(hv_gubun,"1");
    else
        strcpy(hv_gubun,"2");

    EXEC SQL 
        INSERT
        INTO   JATZ702
             ( WORK_DATE,                    ACCT_CODE      ,
               DRFT_NUM,                     GUBUN          ,
               DEPT_CODE,                    SEQ, 
               ISSU_DATE,                    FNSH_DATE      , 
               CMPN_NUM       ,              AMT            ,
               UPD_EMPNO      ,              UPD_DATE       ,
               in_out_divs    ,              slip_divs      ,
               slip_date,                    slip_unit      ,
               slip_clss,                    slip_main_num  ,
               slip_sub_num   ) 
        VALUES (:hv_date,                    :hv_param_acct_code ,
                RTRIM( :hv_drft_num, ' ' ),       :hv_gubun    ,
                'H0000',                     1,
                RTRIM( :hv_issu_date ),      RTRIM( :hv_fnsh_date ),
                :hv_cmpn_num,                :hv_amt,
                '**',                        NULL   ,
                '2',                         :slip_divs,
                :slip_date,                  :slip_unit      ,
                :slip_clss,                  :slip_main_num,
                :slip_sub_num
               ); 

    printf("%s INSERT CNT:%d, gubun:%d, drft:%s\n",str,inx, p, hv_drft_num.arr);
}

